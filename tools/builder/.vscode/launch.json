{
	"configurations": [
		{
			"name": "Launch build",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}",
			"cwd": "${workspaceFolder}",
			"args": [
				"build",
				"${workspaceFolder}/../..",
				"${workspaceFolder}/../../build.toml",
				"${workspaceFolder}/../../assets",
				"${workspaceFolder}/../../build",
				"${workspaceFolder}/../map-maker",
			]
		},
		{
			"name": "Launch assets",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}",
			"cwd": "${workspaceFolder}",
			"args": [
				"assets",
				"${workspaceFolder}/../..",
				"${workspaceFolder}/../../build.toml",
				"${workspaceFolder}/../../assets",
				"${workspaceFolder}/../../build/gfx",
				"${workspaceFolder}/../map-maker",
			]
		},
		{
			"name": "Launch clean",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}",
			"cwd": "${workspaceFolder}",
			"args": [
				"clean",
				"${workspaceFolder}/../..",
			]
		},
	]
}